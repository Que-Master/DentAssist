@model DentAssist.Models.Entities.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}
<h1>Eliminar</h1>

<h3>Seguro que deseas eliminar este Paciente?</h3>

<div class="container mt-4">
    <h2 class="mb-4 text-danger">🗑️ Eliminar Paciente</h2>

    <div class="alert alert-warning">
        ¿Estás seguro de que deseas eliminar a <strong>@Model.Nombre</strong>?
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdPaciente" />
        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>


</div>