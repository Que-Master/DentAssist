@model IEnumerable<DentAssist.Models.Entities.PasoTratamiento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tratamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEstimada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Plan.IdPlan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tratamiento.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstimada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaso">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaso">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPaso">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
