@model DentAssist.Models.Entities.PlanTratamiento

@{
    ViewData["Title"] = "Crear Plan de Tratamiento";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">📝 Crear Plan de Tratamiento</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="IdPaciente" class="form-label">Seleccionar Paciente</label>
            <select asp-for="IdPaciente" class="form-select" asp-items="ViewBag.IdPaciente">
                <option value="">-- Seleccione un paciente --</option>
            </select>
            <span asp-validation-for="IdPaciente" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Observaciones" class="form-label">Observaciones clínicas</label>
            <textarea asp-for="Observaciones" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success">➡️ Continuar a Agregar Pasos</button>
            <a asp-controller="Odontologo" asp-action="Menu" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
