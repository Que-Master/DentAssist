@model DentAssist.Models.Entities.PlanTratamiento

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Seguro que deseas eliminar este Plan?</h3>
<div>
    <h4>PlanTratamiento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Odontologo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Odontologo.Matricula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observaciones)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPlan" />
        <input type="submit" value="🗑️ Eliminar" class="btn btn-danger" /> |
        <a asp-controller="PlanTratamiento" asp-action="Index" class="btn btn-outline-primary">
            ⬅️ Volver a Gestion de Planes
        </a>
    </form>
</div>
