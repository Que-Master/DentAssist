<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentAssist</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DentAssist.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #f0f8ff;">
    <!-- Fondo celeste muy claro -->

    <header>
        <!-- ENCABEZADO -->
        <nav class="navbar navbar-expand-sm navbar-light shadow-sm mb-4" style="background-color: #e0f0ff;">
            <div class="container d-flex justify-content-between align-items-center">
                <a href="/" class="navbar-brand fw-bold text-primary fs-4">
                    🦷 DentAssist
                </a>
                <div class="d-flex gap-3">
                    <a href="/Recepcionista/Login" class="btn btn-outline-primary">Recepcionista</a>
                    <a href="/Odontologo/Login" class="btn btn-outline-success">Odontólogo</a>
                    <a href="/Administrador/Login" class="btn btn-outline-dark">Administrador</a>


                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 mt-5" style="background-color: #e0f0ff;">
        <small>
            © 2025 - DentAssist · Sistema de Gestión Odontológica |
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">Privacidad</a>
        </small>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>