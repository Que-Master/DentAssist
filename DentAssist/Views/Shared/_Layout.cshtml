@{
    var rol = Context.Session.GetString("Rol");
    var esHome = Context.Request.Path == "/";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentAssist</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DentAssist.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: #f0f8ff;">

    <header>
        <nav class="navbar navbar-expand-sm navbar-light shadow-sm mb-4" style="background-color: #e0f0ff;">
            <div class="container d-flex justify-content-between align-items-center">
                <a href="/" class="navbar-brand fw-bold text-primary fs-4">
                    🦷 DentAssist
                </a>

                @if (!string.IsNullOrEmpty(rol) && !esHome)
                {
                    <form asp-controller="Home" asp-action="Logout" method="post" class="mb-0">
                        <button type="submit" class="btn btn-outline-danger btn-sm">🚪 Cerrar Sesión</button>
                    </form>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-4">
        @RenderBody()
    </main>
  <footer class="bg-primary text-white mt-auto pt-4 pb-3 shadow-sm">
    <div class="container">
        <div class="row">
            <!-- Sección: Acerca de -->
            <div class="col-md-4 mb-4">
                <h5 class="text-uppercase fw-bold">DentAssist</h5>
                <p>
                    Plataforma odontológica diseñada para gestionar pacientes, turnos y tratamientos clínicos de forma eficiente, segura y profesional.
                </p>
            </div>

            <!-- Sección: Enlaces -->
            <div class="col-md-4 mb-4">
                <h6 class="fw-bold">Enlaces útiles</h6>
                <ul class="list-unstyled">
                    <li><a href="/" class="text-white text-decoration-none"><i class="bi bi-house-door-fill me-1"></i>Inicio</a></li>
                    <li><a href="/Home/Privacy" class="text-white text-decoration-none"><i class="bi bi-shield-lock-fill me-1"></i>Privacidad</a></li>
                    <li><a href="/Administrador/Login" class="text-white text-decoration-none"><i class="bi bi-person-lock me-1"></i>Administrador</a></li>
                    <li><a href="/Odontologo/Login" class="text-white text-decoration-none"><i class="bi bi-person-circle me-1"></i>Odontólogo</a></li>
                    <li><a href="/Recepcionista/Login" class="text-white text-decoration-none"><i class="bi bi-clipboard-data me-1"></i>Recepcionista</a></li>
                </ul>
            </div>

            <!-- Sección: Contacto -->
            <div class="col-md-4 mb-4">
                <h6 class="fw-bold">Contacto</h6>
                <p><i class="bi bi-envelope-fill me-2"></i> contacto@dentassist.cl</p>
                <p><i class="bi bi-telephone-fill me-2"></i> +56 9 1234 5678</p>
                <p><i class="bi bi-geo-alt-fill me-2"></i> Santiago, Chile</p>
            </div>
        </div>

        <hr class="border-light" />
        <div class="text-center small">
            © 2025 DentAssist · Todos los derechos reservados.
        </div>
    </div>
</footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>