@model List<DentAssist.Models.Entities.Turno>
@{
    ViewData["Title"] = "Turnos del Odontólogo";
    var nombre = ViewData["NombreOdontologo"] as string;
}

<h2 class="mb-4 text-primary">Turnos de @nombre</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">No hay turnos asignados a este odontólogo.</div>
}
else
{
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>Fecha y Hora</th>
                <th>Duración</th>
                <th>Paciente</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in Model)
            {
                <tr>
                    <td>@turno.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@turno.DuracionMinutos min</td>
                    <td>@(turno.Paciente?.Nombre ?? "Sin datos")</td>
                    <td>@turno.Estado</td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="text-start">
    <a asp-controller="Odontologo" asp-action="Menu" class="btn btn-outline-primary">
        ⬅️ Volver al Menu de Odontologo
    </a>
</div>