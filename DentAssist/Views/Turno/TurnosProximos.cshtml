@model IEnumerable<DentAssist.Models.Entities.Turno>
@{
    ViewData["Title"] = "Turnos Próximos";
}

<div class="container mt-4">
    <h2 class="mb-4">📆 Turnos Próximos</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No hay turnos próximos.</div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Odontólogo</th>
                    <th>Paciente</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var turno in Model)
                {
                    <tr>
                        <td>@turno.FechaHora.ToString("dd/MM/yyyy")</td>
                        <td>@turno.FechaHora.ToString("HH:mm")</td>
                        <td>@turno.Odontologo?.Nombre</td>
                        <td>@turno.Paciente?.Nombre</td>
                        <td>@turno.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div class="text-start">
    <a asp-controller="Recepcionista" asp-action="Menu" class="btn btn-outline-primary">
        ⬅️ Volver al Menú de Recepcionista
    </a>
</div>